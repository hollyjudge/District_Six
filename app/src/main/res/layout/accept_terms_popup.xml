<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:background="@color/white"
    tools:context="com.example.district6.LandingPage">

    <TextView
        android:id="@+id/textView"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="105dp"
        android:gravity="center"
        android:lines="20"
        android:text="To use this app you agree to allow Location Services to gather and use information based on the current location of your device. This provides a variety of location-based services. Services include static navigation, AR navigation, AR overlays and pop-up alerts. Agreeing to these terms and conditions means agreeing to allow this app to capture your device type and various metrics associated with your interaction with the app. This is to allow our developers to improve this app in future iterations."
        android:textSize="18dp" />

    <Button
        android:id="@+id/Decline"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="400dp"
        android:backgroundTint="@color/screenBackground"
        android:text="Decline"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold|normal" />

    <Button
        android:id="@+id/Accept"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="400dp"
        android:backgroundTint="@color/screenBackground"
        android:text="Accept"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold|normal" />

</RelativeLayout>